# AORO MVP Environment Configuration

# General
ENV=dev
LOG_LEVEL=INFO
TENANTS=demo

# OpenAI / LangSmith
# OPENAI_API_KEY=your_openai_key_here
# LANGSMITH_API_KEY=your_langsmith_key_here
LANGSMITH_PROJECT=aoro
LANGSMITH_TRACING=true

# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4jpassword

# Pinecone
# PINECONE_API_KEY=your_pinecone_key_here
# PINECONE_ENVIRONMENT=your_environment_here
PINECONE_INDEX=aoro-case-studies

# Database (optional)
# DATABASE_URL=postgresql://user:password@localhost:5432/aoro

# ServiceTitan (tenant-specific in prod; single-tenant convenience in dev)
# SERVICETITAN_CLIENT_ID=your_client_id
# SERVICETITAN_CLIENT_SECRET=your_client_secret
# SERVICETITAN_APP_KEY=your_app_key
# SERVICETITAN_BASE_URL=https://api.servicetitan.com
# SERVICETITAN_TENANT_ID=your_tenant_id

# Regulatory listener settings
# REGULATORY_RSS_FEEDS=https://example.com/feed1.xml,https://example.com/feed2.xml
REGULATORY_UPDATE_FREQUENCY_HOURS=24
REGULATORY_LLM_ENABLED=true

# Enrichment pipeline settings (Phase 1.3)
ENABLE_ENRICHMENT=true
GEOCODING_PROVIDER=nominatim
# APOLLO_API_KEY=your_apollo_api_key_here  # Free tier: 110 credits/month
# HUNTER_API_KEY=test-api-key  # Use test-api-key for testing, or your real key for production
# CLEARBIT_API_KEY=your_clearbit_api_key_here
ENRICHMENT_CACHE_ENABLED=true
ENRICHMENT_DRY_RUN=true  # Set to false when ready to use real credits
ENRICHMENT_PROVIDER_PRIORITY=auto  # "hunter", "apollo", or "auto"
MAX_CREDITS_PER_RUN=3  # Safety limit to prevent credit drain

# Enrichment defaults (production-safe)
APOLLO_ENABLED=false
SKIP_KNOWN_COMPANY_TEST=true
ENRICHMENT_PERSIST_CACHE=false
ENRICHMENT_CACHE_PATH=data/enrichment_cache.json
ENRICHMENT_BLOCKED_EMAIL_DOMAINS=
ENRICHMENT_BLOCKED_EMAIL_TLDS=edu,gov
